# ============================================================================
# CONFIGURA√á√ÉO GIT - TEMPLATE SEGURO
# ============================================================================
# 
# INSTRU√á√ïES DE CONFIGURA√á√ÉO:
# 1. Copie este ficheiro para .gitconfig: cp .gitconfig.example .gitconfig
# 2. Altere os valores com as suas informa√ß√µes pessoais
# 3. NUNCA commite o ficheiro .gitconfig real no Git
# 4. Configure adequadamente para o seu ambiente
#
# ============================================================================

[user]
    # ALTERE PARA AS SUAS INFORMA√á√ïES
    name = Seu Nome Completo
    email = seu.email@exemplo.com

[core]
    # Editor padr√£o (altere conforme prefer√™ncia)
    editor = code --wait
    
    # Configura√ß√µes de linha
    autocrlf = true
    safecrlf = warn
    
    # Configura√ß√µes de ficheiros
    filemode = false
    ignorecase = true

[init]
    # Branch padr√£o
    defaultBranch = main

[pull]
    # Estrat√©gia de pull
    rebase = false

[push]
    # Estrat√©gia de push
    default = simple
    autoSetupRemote = true

[merge]
    # Ferramenta de merge
    tool = vscode
    
[mergetool "vscode"]
    cmd = code --wait $MERGED

[diff]
    # Ferramenta de diff
    tool = vscode

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[alias]
    # Aliases √∫teis para o projeto
    st = status
    co = checkout
    br = branch
    ci = commit
    ca = commit -a
    cm = commit -m
    cam = commit -am
    
    # Aliases espec√≠ficos para mensagens em portugu√™s
    cmp = commit -m
    camp = commit -am
    
    # Logs formatados
    lg = log --oneline --graph --decorate --all
    lp = log --pretty=format:'%h - %an, %ar : %s'
    
    # Opera√ß√µes √∫teis
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    
    # Seguran√ßa
    check = status --porcelain
    safe-push = !git status --porcelain && git push

[color]
    # Cores no terminal
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[branch]
    # Auto-setup de tracking
    autosetupmerge = always
    autosetuprebase = always

[remote "origin"]
    # Configura√ß√£o do reposit√≥rio remoto
    # ALTERE PARA O SEU REPOSIT√ìRIO
    url = https://github.com/SEU_USUARIO/controle-barreiras-iot.git
    fetch = +refs/heads/*:refs/remotes/origin/*

# ============================================================================
# CONFIGURA√á√ïES ESPEC√çFICAS DO PROJETO
# ============================================================================

[commit]
    # Template de mensagem de commit
    template = .gitmessage.txt
    
    # Verifica√ß√µes antes do commit
    gpgsign = false

[tag]
    # Configura√ß√µes de tags
    sort = version:refname

# ============================================================================
# CONFIGURA√á√ïES DE SEGURAN√áA
# ============================================================================

[credential]
    # Gest√£o de credenciais (Windows)
    helper = manager-core
    
    # Para Linux/Mac, use:
    # helper = store

[http]
    # Configura√ß√µes HTTPS
    sslverify = true
    
[https]
    # Configura√ß√µes HTTPS
    sslverify = true

# ============================================================================
# CONFIGURA√á√ïES AVAN√áADAS
# ============================================================================

[rerere]
    # Reutilizar resolu√ß√µes de conflitos
    enabled = true

[help]
    # Auto-corre√ß√£o de comandos
    autocorrect = 1

[log]
    # Formato de data
    date = relative

[format]
    # Formato de patches
    pretty = fuller

# ============================================================================
# HOOKS E AUTOMA√á√ÉO
# ============================================================================

[hooks]
    # Configura√ß√µes de hooks (se implementados)
    pre-commit = true
    pre-push = true

# ============================================================================
# CONFIGURA√á√ïES POR PLATAFORMA
# ============================================================================

# Windows espec√≠fico
[core]
    longpaths = true
    preloadindex = true
    fscache = true

